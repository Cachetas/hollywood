<table class="menu">
    <tr class="navegador">
        <th class="logo">
            <header class="cabecalho">

                <a href="/">
                    <h1>Hollywood</h1>
                </a>
            </header>
        </th>

        <th class="menu">
            <nav class="menu">
                <ul class="menuLista">

                    <li>
                        <a href="/">
                            <input type="button" class="btnMenu" value="Filmes" onclick="anonyHome()">
                            </input>
                        </a>
                    </li>

                    <li id="login">
                        <a id="loginU" href="/login">
                            Iniciar Sessão
                        </a>
                    </li>


                    <li id="pesquisa">

                        <a id="pesquisaA" onclick="hide()">
                            <img id="lupa" src="img/lupa.png" alt="lupa" srcset="img/lupa.svg" height="35">
                        </a>
                    </li>

                    <li id="liBarraPesquisa"><input id="barraPesquisa" type="text" placeholder="nome de filme" /></li>
                </ul>
            </nav>
        </th>
    </tr>
</table>

<div class="trailer">
    <iframe src="{{trailer}}" frameborder="0"
        allow="autoplay; clipboard-write encrypted-media; gyroscope; picture-in-picture" allowfullscreen="1">
    </iframe>
</div>
<section class="info">

    <h2>Titulo Filme: <a id="tituloFilme"></a></h2>
    <p>{{movie_title}}</p>

    <article name="artigo">
        <h3>Sinopse:<a id="synopse"></a></h3>
        <p>{{description}}</p>

    </article>
    <p class="barraLateral">

    <p>Realizador: <a id="realizador"></a></p>
    <p>{{director}}</p>

    <p>Atores: <a id="atores"></a></p>
    <p> {{actors}} </p>

    <p>Ano: <a id="ano"></a></p>
    <p>{{year}}</p>
    </p>

    <a href="/">
        <input type="button" value="Voltar" class="back">
    </a>
