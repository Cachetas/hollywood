                    <li id="liBarraPesquisa">
                        <input id="barraPesquisa" type="text" placeholder="nome de filme" />
                    </li>
                </ul>
            </nav>
        </th>
    </tr>
</table>

<table class="filmes">
    <nav class="filmes">
        <tr>
            <th>


                {{#if listMovies}}
                {{#each listMovies}}
                <a href="/{{this.id}}">
                    <img src="img/filmes/{{this.id}}.jpg" alt={{this.movie_title}} title={{this.movie_title}}>
                </a>
                {{/each}}
                {{else}}
                
                 <p style="color: #428dca">Ainda não tem favoritos adiconados.</p>

                {{/if}}

            </th>
        </tr>
    </nav>
</table>

