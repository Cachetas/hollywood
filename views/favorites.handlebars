    <tr class="navegador">
        <th class="logo">
            <header class="cabecalho">
                <a href="/home">
                    <h1>Hollywood</h1>
                </a>
            </header>
        </th>
        <th class="menu">
            <nav class="menu">
                <ul class="menuLista">
                    <li>
                        <a href="/home">
                            <input type="button" class="btnMenu" value="Filmes">
                            </input>
                        </a>
                    </li>
                    <li>
                        <a href="/favorites">
                            <input type="button" class="btnMenu" value="Favoritos" onclick="favAccess()">
                            </input>

                        </a>
                    </li>
                    <li id="login">
                        <a id="loginU" class="btnMenu" href="/profile">
                            {{name}}
                        </a>
                        <a href="/logout">
                            <p id="logout">Terminar Sessão</p>
                        </a>
                    </li>
                    <li id="pesquisa">
                        <a id="pesquisaA" onclick="hide()">
                            <img id="lupa" src="img/lupa.png" alt="lupa" srcset="img/lupa.svg" height="35">
